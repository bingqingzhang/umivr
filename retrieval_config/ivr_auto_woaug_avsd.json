{
    "test_dataset_config": {
        "dataset_name": "AVSD-1k-test-no_aug",
        "video_path": "dataset/avsd/videos",
        "video_fmt": "mp4",
        "dataset_anno_path": "dataset/avsd/avsd_test.jsonl",
        "anno_file_format": "jsonl",
        "using_llava_preprocess": true,
        "video_preprocess": {
            "sample_num_frame": 8,
            "sample_strategy": "uniform"
        },
        "video_batch_size": 4,
        "video_num_workers": 8,
        "text_batch_size": 1,
        "text_num_workers": 2
    },
    "model_config":{
        "model_name": "LanguageBind/Video-LLaVA-7B",
        "cache_dir": "./cache_dir/",
        "load_4bit": true,
        "load_8bit": false,
        "conv_mode": "llava_v1"
    },
    "dialogue_config": {
        "dialogue_type": "auto_ivr_multiturn",
        "extend_dialogue": true,
        "total_turn": 10,
        "num_segments": 2,
        "use_caption": true,
        "use_caption_cache": true,
        "caption_cache_file": "cache_dir/ivr_avsd_video_captions",
        "wo_aug_dialogue": true
    }      
   
}